@inherits NewTodoBase

<EditForm Model="@TodoForCreation" OnValidSubmit="@(async () => await CreateTodo())">
    <DataAnnotationsValidator />

    <div class="d-flex form-group">
        <InputText @bind-Value="TodoForCreation.Title" class="form-control mr-2 bg-light text-dark br-20 " placeholder="Add task" />
        <button class="btn bg-darkgreen text-white" type="submit">Add</button>
    </div>
    <ValidationMessage For="@(() => TodoForCreation.Title)" />


</EditForm>

@if (TodoAlreadyExists)
{
    <p class="text-danger">Todo with this title already exists in this list</p>
}
else if (CreationFailed)
{
    <p class="text-danger">Something went wrong, try again later</p>
}